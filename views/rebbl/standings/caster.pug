block vars
 - let options = {company: company}

block head
  style.
    body {
      background-color:#1d1e22;
    }
    img {
      max-width: 175px;
      min-width: 175px;
      top:-30px;
      position:relative;
    }
    .border{
      border: 1px solid white;
      max-height:100px;
      overflow:hidden;
    }
    .standing{
      background-color:white;
      color:#0a0a0a;
      float: right;
      height:200px;
      width:275px;
      transform: skew(-20deg);
      margin-right:-50px;
      margin-top:-1px
    }
    .playoffs{
      background-color:#ad1457;
    }
    .challenger{
      background-color:#f07bba;
    }
    .unskew{
      transform: skew(20deg);
    }
    .unskew p {
      font-size: 42px;
      font-family: 'Sarpanch', sans-serif;
      margin-left: 50px;
      margin-top: 27px;
      font-weight: 800;
    }        
    .teamText1{
      font-family: 'Sarpanch', sans-serif;
      font-size: 32px;
      font-weight: 800;
      color: white;
      margin-left: 20px;
      margin-top: 8px;
      text-transform: uppercase;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
    .teamText2{
      font-family: 'Sarpanch', sans-serif;
      font-size: 48px;
      font-weight: 800;
      color: white;
      margin-left: 20px;
      margin-top: -18px;
      text-transform: uppercase;
    } 
    
    @font-face {
      font-family: 'Sarpanch';
      font-style: normal;
      font-weight: 800;
      font-display: swap;
      src: url(https://cdn2.rebbl.net/fonts/sarpanch.woff2) format('woff2');
      unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
    }
    
    @font-face {
      font-family: 'Sarpanch';
      font-style: normal;
      font-weight: 800;
      font-display: swap;
      src: url(https://cdn2.rebbl.net/fonts/sarpanch.woff2) format('woff2');
      unicode-range: U+0900-097F, U+1CD0-1CF6, U+1CF8-1CF9, U+200C-200D, U+20A8, U+20B9, U+25CC, U+A830-A839, U+A8E0-A8FB;
    }




block body
  

  div(style="display:flex; flex-direction:row")
    each x in [0,1]
      div(style="flex:1;max-width:50%" class=`${x === 0 ? 'main': ''}`)
        each st,index in standings[x]
          .border
            if (x === 0)
              .standing(class = (ticket ? index < tickets.playoffs ? 'playoffs' : (index < tickets.challenger ? 'challenger' : '') : '' ) )
                .unskew
                  p= `${st.win}-${st.draw}-${st.loss}`
            else
              .standing
                .unskew
                  p= `${st.win}-${st.draw}-${st.loss}`
            div(style=styles[st.logo.toLowerCase()])
              div(style="display:flex")
                div
                  img(src=`https://cdn2.rebbl.net/images/logo/256x256/logo_${st.logo.toLowerCase()}.png`) 
                div
                  .teamText1= st.teamName1
                  .teamText2= st.teamName2

